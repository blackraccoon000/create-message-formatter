{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["scripts/*"],
      "libs/*": ["libs/*"]
    }
  },
  "include": ["scripts/**/*.ts", "src/**/*.ts", "libs/**/*.ts"],
  "exclude": ["node_modules"]
}
